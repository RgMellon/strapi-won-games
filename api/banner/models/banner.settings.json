{
  "kind": "collectionType",
  "collectionName": "banners",
  "info": {
    "name": "banner"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "text",
      "required": true,
      "maxLength": 120
    },
    "button": {
      "type": "component",
      "repeatable": false,
      "component": "page.button"
    },
    "ribbon": {
      "type": "component",
      "repeatable": false,
      "component": "page.ribbon"
    }
  }
}
